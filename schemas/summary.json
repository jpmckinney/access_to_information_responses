{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Information Request",
  "description": "A request for information under a freedom of information law",
  "type": "object",
  "properties": {
    "id": {
      "description": "A unique identifier for the request",
      "type": "string"
    },
    "division_id": {
      "description": "An Open Civic Data Division Identifier",
      "type": "string"
    },
    "identifier": {
      "description": "The number or identifier of the request",
      "type": [
        "integer",
        "string"
      ]
    },
    "alternate_identifier": {
      "description": "Another number or identifier of the request",
      "type": [
        "integer",
        "string"
      ]
    },
    "date": {
      "description": "The date of decision or the date of publication of the request",
      "type": "string",
      "pattern": "^[0-9]{4}(-[0-9]{2}){0,2}$"
    },
    "abstract": {
      "description": "The summary of the request",
      "type": "string"
    },
    "decision": {
      "description": "The decision as to whether or not to disclose the record or the part thereof",
      "type": "string",
      "enum": [
        "abandoned",
        "all disclosed",
        "correction",
        "disclosed in part",
        "in progress",
        "nothing disclosed",
        "transferred",
        "treated informally"
      ]
    },
    "organization": {
      "description": "The organization to which the request was sent",
      "type": "string"
    },
    "media_type": {
      "description": "The media type of the records disclosed",
      "type": "string",
      "enum": [
        "application/pdf",
        "application/vnd.ms-excel",
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"
      ]
    },
    "number_of_pages": {
      "description": "The number of pages disclosed",
      "type": "integer"
    },
    "number_of_rows": {
      "description": "The number of rows in the records disclosed",
      "type": "integer"
    },
    "duration": {
      "description": "The duration in seconds of the audio or video",
      "type": "number"
    },
    "classification": {
      "description": "The classification of the request",
      "type": "string",
      "enum": [
        "general",
        "personal"
      ]
    },
    "url": {
      "description": "The URL of the request",
      "type": "string",
      "format": "uri"
    }
  },
  "additionalProperties": false,
  "required": [
    "division_id"
  ],
  "anyOf": [
    {
      "required": [
        "identifier",
        "date"
      ]
    },
    {
      "required": [
        "identifier",
        "abstract"
      ]
    },
    {
      "required": [
        "date",
        "abstract"
      ]
    }
  ]
}
